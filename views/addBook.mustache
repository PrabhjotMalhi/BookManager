{{>layout}}
{{#content}}
  <h2>Add a New Book</h2>
  {{#error}}<div class="error">{{error}}</div>{{/error}}
  <form action="/add" method="POST">
    <label>Title:</label>
    <input type="text" name="title" value="{{title}}" required>
    
    <label>Author:</label>
    <input type="text" name="author" value="{{author}}" required>
    
    <label>Genre:</label>
    <select name="genre">
      <option value="Fantasy">Fantasy</option>
      <option value="Sci-Fi">Sci-Fi</option>
      <option value="Mystery">Mystery</option>
    </select>
    
    <label>Rating (0-5):</label>
    <input type="number" name="rating" step="0.1" min="0" max="5" value="{{rating}}" required>
    
    <label>Status:</label>
    <select name="status">
      <option value="Read">Read</option>
      <option value="Reading">Reading</option>
      <option value="Unread">Unread</option>
    </select>
    
    <label>Publish Year:</label>
    <input type="number" name="publish_year" value="{{publish_year}}" required>
    
    <button type="submit">Add Book</button>
  </form>
  <a href="/">Cancel</a>
{{/content}}